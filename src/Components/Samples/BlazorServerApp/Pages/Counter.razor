@page "/counter"

<h1>Counter</h1>

<p id="counter">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<p>
    Increment:
    <NavLink Match="NavLinkMatch.All" href="@SelfUrl(0)">Default</NavLink> |
    <NavLink Match="NavLinkMatch.All" href="@SelfUrl(-1)">-1</NavLink> |
    <NavLink Match="NavLinkMatch.All" href="@SelfUrl(100)">100</NavLink> |
</p>


@code {
    int currentCount = 0;

    [Parameter, SupplyParameterFromQuery(Name = "inc")] public int? IncrementAmount { get; set; }

    void IncrementCount()
    {
        currentCount += IncrementAmount.GetValueOrDefault(1);
    }
}
