@page
@using BasicTestApp.RouterTest
@using Components.TestServer

<component output-name="app" type="typeof(TestRouterWithLazyAssembly)" render-mode="ServerPrerendered" />
<component output-name="head" type="typeof(PrerenderedHeadRoot)" render-mode="ServerPrerendered" />

<!DOCTYPE html>
<html>
<head>
    <base href="~/" />
    @*<app><component type="typeof(PrerenderedHeadRoot)" render-mode="ServerPrerendered" /></app>*@
    <component-output name="head" />
</head>
<body>
    @*<component type="typeof(TestRouterWithLazyAssembly)" render-mode="ServerPrerendered" />*@
    <app><component-output name="app" /></app>

    @*
        So that E2E tests can make assertions about both the prerendered and
        interactive states, we only load the .js file when told to.
    *@
    <hr />

    <button id="load-boot-script" onclick="start()">Load boot script</button>

    <script src="_framework/blazor.server.js" autostart="false"></script>

    <script>
        // Used by InteropOnInitializationComponent
        function setElementValue(element, newValue) {
            element.value = newValue;
            return element.value;
        }

        function start() {
            Blazor.start({
                logLevel: 1 // LogLevel.Debug
            });
        }
    </script>
</body>
</html>
